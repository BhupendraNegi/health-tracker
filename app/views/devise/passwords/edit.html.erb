<div class="container my-4">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="d-flex justify-content-center">
    <div class="card m-4 p-4">
      <div class="container">
        <h2>Change your password</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field my-3">
            <% if @minimum_password_length %>
              <small> min <%= @minimum_password_length %> characters</small>
            <% end %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true, autocomplete: "new-password" %>
          </div>

          <div class="field my-3">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", autocomplete: "new-password" %>
          </div>

          <div class="actions my-4">
            <%= f.submit "Change my password", class: "btn btn-secondary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
